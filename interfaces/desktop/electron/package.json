{
  "name": "syntropy-cooperative-grid-desktop",
  "version": "1.0.0",
  "description": "Desktop interface for Syntropy Cooperative Grid Management System",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:main": "tsc -p main/tsconfig.json && electron dist/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd renderer && npm run build",
    "build:main": "tsc -p main/tsconfig.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "electron": "27.0.0",
    "electron-updater": "6.1.0",
    "electron-store": "8.1.0"
  },
  "devDependencies": {
    "@types/node": "20.8.0",
    "typescript": "5.2.2",
    "electron-builder": "24.6.0",
    "concurrently": "8.2.0",
    "eslint": "8.51.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "jest": "29.7.0"
  },
  "build": {
    "appId": "com.syntropy.cooperative-grid",
    "productName": "Syntropy Cooperative Grid",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}

