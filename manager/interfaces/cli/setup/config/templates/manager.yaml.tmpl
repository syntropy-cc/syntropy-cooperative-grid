# Syntropy Manager Configuration Template
# This file is automatically generated during setup

manager:
  home_dir: "{{ .Manager.HomeDir }}"
  log_level: "{{ .Manager.LogLevel }}"
  api_endpoint: "{{ .Manager.APIEndpoint }}"
  
  # Directory paths
  directories:
    config: "{{ .Manager.Directories.config }}"
    keys: "{{ .Manager.Directories.keys }}"
    nodes: "{{ .Manager.Directories.nodes }}"
    logs: "{{ .Manager.Directories.logs }}"
    cache: "{{ .Manager.Directories.cache }}"
    backups: "{{ .Manager.Directories.backups }}"
    scripts: "{{ .Manager.Directories.scripts }}"
  
  # Default file paths
  default_paths:
    owner_key: "{{ .Manager.DefaultPaths.owner_key }}"
    config: "{{ .Manager.DefaultPaths.config }}"

# Owner key configuration
owner_key:
  type: "{{ .OwnerKey.Type }}"
  path: "{{ .OwnerKey.Path }}"

# Environment information
environment:
  os: "{{ .Environment.OS }}"
  architecture: "{{ .Environment.Architecture }}"
  home_dir: "{{ .Environment.HomeDir }}"